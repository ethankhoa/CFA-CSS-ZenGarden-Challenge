.page-wrapper {
  position: absolute;
  display: block;
  top: -10;
  left: 400px;
  border: 3px solid #73AD21;
  /*background-color: #F0EDDE;
  opacity: 0.6;*/
  width: calc(550px + 5px);
  max-height: 1000px;
  margin: 0;
  padding-top: 5px;
  overflow-y: auto;
  overflow-x: hidden;
  -webkit-transform: rotate(-90deg) translateY(-550px);
            transform: rotate(-90deg) translateY(-550px);
  -webkit-transform-origin: right top;
            transform-origin: right top;
          }

.page-wrapper > section {
              /*position: absolute;;*/
              float: left;
              display: block;
              padding: 5px;
              /*opacity: 0.7;*/
              -webkit-transform: rotate(90deg);
                      transform: rotate(90deg);
              -webkit-transform-origin: right top;
                      transform-origin: right top;
        }


        .page-wrapper > div {
          position: absolute;
          display: block;
          float: right;
          padding: 455px;
          opacity: 0.7;
          -webkit-transform: rotate(90deg);
              transform: rotate(90deg);
              -webkit-transform-origin: right top;
              transform-origin: right top;
            }

           .page-wrapper > aside {
               display: block;
               float: right;
               padding: 5px;
               opacity: 0.7;
               -webkit-transform: rotate(90deg);
                       transform: rotate(90deg);
               -webkit-transform-origin: right top;
                       transform-origin: right top;
                      }


        rectangles{
          top:100px;
          padding:100px 0 0 0;
        }
        .rectangles > section{
          width:140px;
          height:60px;
          margin:50px 10px;
          padding:5px;
          /*background:#cab;*/
          transform:rotate(90deg) translateY(80px);
          transform-origin: right top;
        }
        .rectangles > div{
          width:140px;
          height:60px;
          margin:50px 10px;
          padding:5px;
          /*background:#cab;*/
          transform:rotate(90deg) translateY(80px);
          transform-origin: right top;
        }
        .rectangles > aside{
          width:140px;
          height:60px;
          margin:50px 10px;
          padding:5px;
          /*background:#cab;*/
          transform:rotate(90deg) translateY(80px);
          transform-origin: right top;
        }

